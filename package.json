{
  "private": true,
  "description": "Extension with additional Material Components for the Web",
  "repository": {
    "type": "git",
    "url": "https://github.com/marioavs/mdcweb-extension.git"
  },
  "scripts": {
    "build": "mkdirp build && webpack --progress --colors",
    "build:min": "mkdirp build && cross-env MDC_ENV=production webpack -p --progress --colors",
    "clean": "del-cli build/** build .closure-tmp/** .closure-tmp test/screenshot/out/",
    "dist": "npm run clean && npm run build && npm run build:min",
    "dev": "npm run clean && cross-env MDC_ENV=development webpack-dev-server --config=demos/webpack.config.js --progress --inline --hot --host 0.0.0.0",
    "postinstall": "lerna bootstrap",
    "lint:js": "eslint packages test scripts webpack.config.js demos/webpack.config.js karma.conf.js",
    "lint:css": "stylelint \"packages/**/*.scss\"",
    "lint": "npm-run-all --parallel lint:*",
    "test": "npm run test:unit && npm run test:closure && npm run test:dependency && npm run build && npm run clean",
    "test:unit": "karma start --single-run",
    "test:closure": "./scripts/closure-test.sh",
    "test:dependency": "./scripts/dependency-test.sh"
  },
  "keywords": [
    "material",
    "components"
  ],
  "author": "marioavs",
  "license": "Apache-2.0",
  "devDependencies": {
    "autoprefixer": "^8.4.1",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-object-assign": "^6.22.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-traverse": "^6.26.0",
    "babel-types": "^6.26.0",
    "bel": "^6.0.0",
    "camel-case": "^3.0.0",
    "chai": "^4.1.2",
    "cross-env": "^5.1.3",
    "css-loader": "^0.28.7",
    "del-cli": "^1.1.0",
    "dom-events": "^0.1.1",
    "eslint": "^4.10.0",
    "eslint-config-google": "^0.9.1",
    "eslint-plugin-mocha": "^5.0.0",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "glob": "^7.1.2",
    "google-closure-compiler": "^20180402.0.0",
    "istanbul-instrumenter-loader": "^3.0.1",
    "karma": "^2.0.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.2",
    "karma-firefox-launcher": "^1.1.0",
    "karma-mocha": "^1.3.0",
    "karma-sauce-launcher": "^1.2.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^3.0.0",
    "lerna": "^2.11.0",
    "material-components-web": "^0.35.1",
    "mkdirp": "^0.5.1",
    "mocha": "^5.1.1",
    "node-sass": "^4.9.0",
    "postcss-loader": "^2.1.4",
    "sass-loader": "^7.0.1",
    "stylelint": "^9.2.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-order": "^0.8.1",
    "stylelint-scss": "^3.1.0",
    "stylelint-selector-bem-pattern": "^2.0.0",
    "testdouble": "^3.8.0",
    "webpack": "^4.7.0",
    "webpack-cli": "^2.1.2",
    "webpack-dev-server": "^3.1.4"
  },
  "babel": {
    "presets": [
      [
        "es2015",
        {
          "modules": false
        }
      ]
    ],
    "plugins": [
      "transform-object-assign"
    ],
    "env": {
      "test": {
        "presets": [
          "es2015"
        ]
      }
    }
  },
  "closureWhitelist": [
    "mdc-ext-input-dialog"
  ]
}
